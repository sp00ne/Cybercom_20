<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <!-- CardView -->
    <android.support.v7.widget.CardView android:id="@+id/song_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/song_title"
                fontPath="@string/font_caecilia"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:textSize="30sp"
                tools:ignore="MissingPrefix" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/song_melody"
                fontPath="@string/font_frutiger_italic"
                android:layout_below="@+id/song_title"
                tools:ignore="MissingPrefix" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/song_author"
                fontPath="@string/font_frutiger_italic"
                android:layout_below="@+id/song_melody"
                tools:ignore="MissingPrefix" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
